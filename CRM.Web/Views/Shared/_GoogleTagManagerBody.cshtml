@using CRM.Core.Helpers

@{

    var setting = SettingHelper.GetOrCreate("System_Google_Tag_Manager_Key", "");
}

@if (setting.Value != "")
{
    <!-- Google Tag Manager (noscript) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=@setting.Value"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
}